color=#bd93f9

[temperature]
command=$SCRIPT_DIR/temperature
label= 
interval=10
T_WARN=80
T_CRIT=90
color=#bd93f9

[battery]
command=$SCRIPT_DIR/battery
interval=30
#LABEL=BAT 
LABEL=  
#BAT_NUMBER=0
color=#bd93f9

[disk_root]
command=$SCRIPT_DIR/disk
LABEL= 
DIR=/
ALERT_LOW=10
interval=30
color=#bd93f9

[essid]
command=$SCRIPT_DIR/essid
LABEL= 
interval=60
INTERFACE=wlp2s0
WIDTH=200
color=#50fa7b

[volume-pulseaudio]
command=$SCRIPT_DIR/volume-pulseaudio
interval=once
signal=10
#MIXER=[determined automatically]
#SCONTROL=[determined automatically]
##exposed format variables: ${SYMB}, ${VOL}, ${INDEX}, ${NAME}
#LONG_FORMAT="${SYMB} ${VOL}% [${NAME}]"
#SHORT_FORMAT="${SYMB} ${VOL}% [${INDEX}]"
LONG_FORMAT="${SYMB} ${VOL}%"
SHORT_FORMAT="${SYMB}"
AUDIO_HIGH_SYMBOL=
#AUDIO_MED_THRESH=50
AUDIO_MED_SYMBOL=
#AUDIO_LOW_THRESH=0
AUDIO_LOW_SYMBOL=
AUDIO_MUTED_SYMBOL=
#AUDIO_DELTA=5
DEFAULT_COLOR="#bd93f9"
#MUTED_COLOR="#a0a0a0"
#USE_ALSA_NAME=0
#USE_DESCRIPTION=0
## SUBSCRIBE=1 requires interval=persist and always uses LONG_FORMAT
#SUBSCRIBE=0

[calendar]
command=$SCRIPT_DIR/calendar
interval=1
DATEFMT=+%A %d-%m-%Y %H:%M:%S
SHORTFMT=+%H:%M:%S
